<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginVertical="16dp"
	android:fillViewport="true"
	app:layout_behavior="@string/appbar_scrolling_view_behavior">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:weightSum="4">
			
			<LinearLayout
				android:id="@+id/ll_normal1"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal"
				android:weightSum="2">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_search"
					android:layout_width="match_parent"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="8dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Search Trains"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>


			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ll_normal2"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal"
				android:weightSum="2">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_view_tickets"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="8dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="View\nTickets"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_view_balance"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="16dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="View\nBalance"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
			
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ll_admin1"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal"
				android:weightSum="2">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_add_train"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="8dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Add\nTrain"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_remove_train"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="16dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Remove\nTrain"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
			
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ll_admin2"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_view_report"
					android:layout_width="match_parent"
					android:layout_height="125dp"
					android:layout_margin="16dp"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="View Report"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
			
			</LinearLayout>
		
		</LinearLayout>
		
		<ProgressBar
			android:id="@+id/pb_home"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:elevation="16dp"
			android:padding="@dimen/mediumPadding"
			android:visibility="visible"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>