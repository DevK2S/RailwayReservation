<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".main.HomeFragment">
	
	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="top">
		
		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/toolbar"
			style="@style/BaseActivityToolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:menu="@menu/toolbar_menu"
			app:title="Home"
			app:titleMarginStart="48dp" />
	
	</com.google.android.material.appbar.AppBarLayout>
	
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginVertical="16dp"
		android:fillViewport="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:weightSum="4">
			
			<LinearLayout
				android:id="@+id/ll_normal1"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal"
				android:weightSum="2">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_search"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="8dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Search\nTrains"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_book"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="16dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Book\nTrains"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
			
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ll_normal2"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal"
				android:weightSum="2">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_view_tickets"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="8dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="View\nTickets"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_view_balance"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="16dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="View\nBalance"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
			
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ll_admin1"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal"
				android:weightSum="2">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_add_train"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="8dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Add\nTrain"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_remove_train"
					android:layout_width="0dp"
					android:layout_height="125dp"
					android:layout_marginVertical="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="16dp"
					android:layout_weight="1"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Remove\nTrain"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
			
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ll_admin2"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="horizontal">
				
				<androidx.cardview.widget.CardView
					android:id="@+id/cd_view_report"
					android:layout_width="match_parent"
					android:layout_height="125dp"
					android:layout_margin="16dp"
					android:background="@color/colorPrimary"
					app:cardBackgroundColor="@color/colorPrimary"
					app:cardCornerRadius="30dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="View Report"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="32sp" />
				
				</androidx.cardview.widget.CardView>
			
			</LinearLayout>
		
		</LinearLayout>
	
	</androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>